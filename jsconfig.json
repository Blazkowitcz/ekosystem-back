{
    "compilerOptions": {
      "baseUrl": "./",
      "paths": {
        "@models/*": ["src/models/*"],
        "@controllers/*": ["src/controllers/*"],
        "@services/*": ["src/services/*"],
        "@modules/*": ["src/modules/*"],
        "@routes/*": ["src/routes/*"],
        "@middlewares/*": ["src/middlewares/*"],
        "@utils/*": ["src/utils/*"]
      }
    },
    "exclude": ["node_modules", "dist"]
  }